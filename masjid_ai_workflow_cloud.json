      "webhook_receiver": {
        "id": "WR001",
        "type": "webhook_processor",
        "name": "WhatsApp Message Receiver",
        "config": {
          "extract_fields": ["phone", "message", "timestamp", "type", "name"],
          "message_types": ["text", "button", "interactive"]
        },
        "connections": {
